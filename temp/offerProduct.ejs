<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Offer us an awesome product</title>
    <%- include( 'include/head' ) %>
</head>
<body class="d-flex flex-column min-vh-100">
<%- include( 'include/navbar' ) %>
<div class="container pt-5">
    <%
    if(typeof errors != 'undefined') {
    errors.forEach((error) => {
    %>
        <div class="alert alert-danger" role="alert">
            <%= error.msg%>
        </div>
    <%
    })
    }
    %>
    <form action="/offerProduct" enctype="multipart/form-data" method="post">
        <div class="container pt-5 pb-5">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Offer product</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="inputName">Product Name</label>
                        <input type="text" name = "name" id="inputName" class="form-control" >
                    </div>
                    <div class="form-group mt-2">
                        <label for="inputDescription">Product Description</label>
                        <textarea id="inputDescription" name="description" class="form-control" rows="4" ></textarea>
                    </div>
                    <div class="form-group mt-2">
                        <label for="inputPrice">Price</label>
                        <input type="number" name="price"  id="inputPrice" class="form-control" placeholder="10000" >
                    </div>

                    <input type="file" name="testImage" value="testImage" accept="image/*"  required/>
                </div>
            </div>
            <div class="col-12 mt-3" style="display: flex; justify-content: space-between">
                <a href="/">Cancel</a>
                <input type="submit" value="Offer" class="btn btn-success btn-sm submit-offer">
            </div>
        </div>
    </form>
</div>

<%- include( 'include/footer' ) %>

</body>
</html>