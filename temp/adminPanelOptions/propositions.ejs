<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Panel</title>
    <title>Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel = "stylesheet" href = "../public/stylesheet-for-MainPage.css">
    <script defer src="https://kit.fontawesome.com/38606480b3.js" crossorigin="anonymous"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>
<body>

<%- include( '../include/navbar' ) %>

<div class="container-fluid">
    <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block sidebar collapse">
        <div class="position-sticky pt-3">
            <ul class="nav flex-column">
                <%for (i = 0; i < n; i++){ %>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="<%= link[i]%>">
                            <i class="fa-solid <%= classes[i]%> nav-icon"></i>
                            <%= page[i]%>
                        </a>
                    </li>
                <%}%>
            </ul>
        </div>
    </nav>
    <%if(typeof error != 'undefined') {%>
        <div class="alert alert-danger" role="alert">
            <%= error%>
        </div>
    <%}%>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product name</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Data</th>
            <th scope="col">Owner Name</th>
            <th scope="col">Status</th>
        </tr>
        </thead> 
        <tbody>
        <%for (i = 0;i < mydata.length;i++) {%>
        <tr>
            <th scope="row"><%=i+1%></th>
            <td><a href="/product/<%= mydata[i]._id%>"><%= mydata[i].productName%></a></td>
            <td><%= mydata[i].price%> <%= mydata[i].currency%></td>
            <td><%= mydata[i].description%></td>
            <td><%= mydata[i].date%></td>
            <td><a href=""><%= mydata[i].ownerInfo.name%></a></td>
            <td class="project-state">
                <span class="badge badge-fail">Not approved</span>
            </td>
            <td class="project-actions text-right">
                <a class="btn btn-success btn-sm" href="/product/approved/<%= mydata[i]._id%>">
                    Approve
                </a>
                <a class="btn btn-primary btn-sm" href="/product/<%= mydata[i]._id%>">
                    <i class="fas fa-folder">
                    </i>
                    View
                </a>
                <a class="btn btn-danger btn-sm" href="propositions/delete/<%= mydata[i]._id%>">
                    <i class="fas fa-trash">
                    </i>
                    Delete
                </a>
            </td>
        </tr>
        <%}%>
        </tbody>
    </table>
</div>
</body>
</html>